<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animationCache="true"
    android:background="@color/colorwhite"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_margin="2dp"
        app:cardBackgroundColor="#00444444"
        app:cardCornerRadius="0dp"
        app:contentPadding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/fore_date_screen"
                android:layout_width="10sp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center"
                android:text="MOn"
                android:textColor="@color/colorblack"
                android:textSize="15sp"
                android:textStyle="bold"
                app:fontFamily="@font/cairo_extralight">

            </TextView>

            <ImageView
                android:id="@+id/fore_pic"
                android:layout_width="110dp"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1">

            </ImageView>


            <TextView
                android:id="@+id/fore_tempmax"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:layout_weight="1"
                android:gravity="center"
                android:text="23"
                android:textColor="@color/textcolor"
                android:textSize="20sp"
                android:visibility="gone"
                app:fontFamily="@font/autour_one">

            </TextView>

            <TextView
                android:id="@+id/fore_temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center"
                android:text="23"
                android:textColor="@color/colorblack"
                android:textSize="20sp"
                android:visibility="gone"
                app:fontFamily="@font/autour_one">

            </TextView>

            <TextView
                android:id="@+id/fore_description"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center_vertical"
                android:text="Desc"
                android:textAllCaps="true"
                android:textColor="@color/colorblack"
                android:textSize="12sp"
                android:visibility="visible"
                app:fontFamily="@font/cairo_extralight">

            </TextView>


        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>